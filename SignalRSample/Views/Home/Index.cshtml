@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>



<div class="container">

    <div class="row border p-1">
        <h3>Dealthy Hallow Race</h3>
        <div class="col-4">
            <div>Invisiblity Cloak- <span id="cloakCounter"></span></div>
        </div>
        <div class="col-4">
            <div>Resurrection Stone - <span id="stoneCounter"></span></div>
        </div>
        <div class="col-4">
            <div>Elder Wand - <span id="wandCounter"></span></div>
        </div>
        <hr />
        <p>Url to Vote:</p>
        <div>1. Invisiblity Cloak- https://localhost:7001/Home/DealthyHallow?type=cloak</div>
        <div>2. Resurrection Stone- https://localhost:7001/Home/DealthyHallow?type=stone</div>
        <div>3. Elder Wand- https://localhost:7001/Home/DealthyHallow?type=wand</div>
    </div>


    <div class="row">
        <div class="col-3">
            Total View
        </div>
        <div class="col-4">
            <span id="totalViewsCounter">

            </span>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-3">
            Active User
        </div>
        <div class="col-4">
            <span id="activeUserCount">

            </span>
        </div>
    </div>
</div>

<script src="~/js/signalr.min.js"></script>
<script src="~/js/signalr.js"></script>
<script src="~/js/usercount.js"></script>
<script src="~/js/dealthyhallows.js"></script>